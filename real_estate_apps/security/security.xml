<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_real_estate_brokerage" model="ir.module.category">
            <field name="name">REAL ESTATE</field>
            <field name="description">Help the agent And Manager to use this Application</field>
            <field name="sequence">15</field>
        </record>

        <!--        ACCESS RIGHT-->
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agents</field>
            <field name="category_id" ref="real_estate.module_category_real_estate_brokerage"/>
        </record>

        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="real_estate.module_category_real_estate_brokerage"/>
        </record>



        <!--        FOR RECORD RULE-->
        <record model="ir.rule" id="estate_user_access">
            <field name="name">Read Only Permission</field>
            <field name="model_id" ref="model_estate_property_type"/>
            <field name="domain_force">[('create_uid','=', user.id)]</field>
            <field name="groups" eval="[(4,ref('estate_group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_create" eval="0"/>
        </record>

        <record model="ir.rule" id="estate_manager_access">
            <field name="name">All Access Permission</field>
            <field name="model_id" ref="model_estate_property_type"/>
            <field name="domain_force">[(1,'=', 1)]</field>
            <field name="groups" eval="[(4,ref('estate_group_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_create" eval="1"/>
        </record>
    </data>
</odoo>
